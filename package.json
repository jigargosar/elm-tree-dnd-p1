{
  "name": "elm-interpreter-p1",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.html"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^2.0.1",
    "pouchdb-browser": "^7.0.0",
    "ramda": "^0.26.1",
    "tachyons": "^4.11.1",
    "aproba": "latest"
  },
  "devDependencies": {
    "elm-hot": "^1.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node-elm-compiler": "^5.0.3",
    "prettier": "^1.16.4",
    "sass": "^1.17.2"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "printWidth": 75,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,html,ts,tsx}": [
      "prettier --config package.json --write",
      "git add"
    ]
  }
}
